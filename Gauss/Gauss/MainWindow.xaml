<Window x:Class="Gauss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gauss"
        mc:Ignorable="d"
        Title="Gauss" Height="450" Width="800" Icon="/free-icon-letter-g-6042018.png">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2" x:Name="Tb" SelectionChanged="Tb_SelectionChanged">
            <TabItem Header="Условие">
                <Grid x:Name ="Logic" Background="#FFE5E5E5">

                </Grid>
            </TabItem>
            <TabItem Header="Решение" x:Name="sol">
                <Grid Background="#FFE5E5E5" x:Name="Solution">

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
